<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/header_padding_left"
    android:layout_marginRight="@dimen/header_padding_right">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@color/common_white"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_normal">

        <ImageView
            android:id="@+id/cosplay_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="false"
            android:src="@drawable/default_img"
            android:background="@drawable/tag_btn_solid_bg"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_big"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/cosplay_res_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "少年四大名捕 剧情男生篇"
                android:textColor="@color/common_white"
                android:layout_marginTop="@dimen/margin_normal"
                style="@style/common_text_title" />

            <LinearLayout
                android:id="@+id/cosplay_res_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cosplay_res_name"
                android:layout_alignLeft="@+id/wo_name"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cosplay_res_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元素容量 2.16M"
                    android:textColor="@color/common_white"
                    style="@style/common_text_content" />

                <TextView
                    android:id="@+id/cosplay_element_number"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帖子：321w"
                    android:textColor="@color/common_white"
                    style="@style/common_text_content" />
            </LinearLayout>

        </RelativeLayout>

        <com.moinapp.wuliao.modules.cosplay.ui.DownloadItemView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/download"
            android:paddingRight="@dimen/margin_big">

            <ImageView
                android:id="@+id/image_download"
                android:src="@drawable/btn_download"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_below="@id/image_download"
                android:text="下载"
                style="@style/common_text_small"
                android:layout_alignParentRight="true"
                android:layout_marginRight="1dp" />
        </com.moinapp.wuliao.modules.cosplay.ui.DownloadItemView>
    </RelativeLayout>
</LinearLayout>