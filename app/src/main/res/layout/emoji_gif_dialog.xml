<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="center_horizontal">



		<RelativeLayout
			android:layout_width="@dimen/emj_dialog_width"
			android:layout_height="@dimen/emj_dialog_height"
			android:orientation="vertical"
			android:padding="@dimen/margin_big"
			android:layout_centerHorizontal="true"
			android:background="@color/common_grey">

			<pl.droidsonroids.gif.GifImageView
				android:id="@+id/dialog_imageview"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_gravity="center" />

			<ImageView
				android:id="@+id/share_dialog_cancel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/btn_cancle"
				android:onClick="onClick"
				android:longClickable="true"
				android:layout_alignParentRight="true" />
		</RelativeLayout>

		<LinearLayout
			android:layout_width="300dp"
			android:layout_height="@dimen/common_bar_height"
			android:background="@color/emoji_pop_bg"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/gif_weixin"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/btn_share_wechat"
				android:layout_alignParentBottom="true"
				android:onClick="onClick"
				android:layout_gravity="center_vertical"
				android:layout_weight="1" />

			<ImageView
				android:id="@+id/gif_qq"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:src="@drawable/btn_share_qq"
				android:layout_alignParentBottom="true"
				android:onClick="onClick"
				android:layout_gravity="center_vertical"
				android:layout_weight="1" />

		</LinearLayout>



</LinearLayout>