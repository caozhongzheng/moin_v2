<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_title_grey"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">

    <include layout="@layout/ic_header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:background="@color/common_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/wo_info_item"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

            <LinearLayout
                android:padding="@dimen/margin_nomal"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:minHeight="150dp"
                android:layout_marginLeft="@dimen/header_padding_left"
                android:layout_marginRight="@dimen/header_padding_right"
                android:background="@color/common_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="窝介绍"
                    style="@style/common_text_title"
                    android:textColor="#af8526" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_grey"
                    android:layout_marginBottom="@dimen/margin_big" />

                <TextView
                    android:id="@+id/wo_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text=""
                    style="@style/common_text_poster" />
            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/margin_nomal"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:background="@color/common_white"
                android:layout_marginLeft="@dimen/header_padding_left"
                android:layout_marginRight="@dimen/header_padding_right"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_big">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="窝规则"
                    style="@style/common_text_title"
                    android:textColor="#af8526" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_grey"
                    android:layout_marginBottom="@dimen/margin_big" />

                <TextView
                    android:id="@+id/wo_rules"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/common_text_poster" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>