<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_rl"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/help_post_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/help_poster_1" />

    <ImageView
        android:id="@+id/help_post_img2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="166dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:scaleX="1.05"
        android:scaleY="1.05"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/help_poster_2" />

    <ImageView
        android:id="@+id/help_post_img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="363dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:scaleX="1.27"
        android:scaleY="1.27"
        android:src="@drawable/help_poster_3" />

    <ImageView
        android:id="@+id/help_post_img4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/tutorial_post4_ml"
        android:layout_marginBottom="@dimen/tutorial_post4_mb"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/help_poster_4" />

</RelativeLayout>