<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/cosplay_item_cell_width"
        android:layout_height="@dimen/cosplay_item_cell_height"
        android:id="@+id/cosplay_itemImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/default_img"
        android:layout_marginLeft="8dp"
        android:contentDescription="@null"
        android:clickable="true"
        android:layout_marginTop="6dp" />

    <ImageView
        android:layout_width="@dimen/cosplay_item_cell_width"
        android:layout_height="@dimen/cosplay_item_cell_height"
        android:id="@+id/cosplay_itemSelect"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@null"
        android:src="@drawable/cosplay_item_select"
        android:layout_marginLeft="8dp"
        android:focusableInTouchMode="false"
        android:layout_marginTop="6dp" />
</RelativeLayout>
