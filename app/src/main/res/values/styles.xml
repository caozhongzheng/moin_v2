<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Timetodo" parent="@android:style/Theme.Holo.Light">
        <!-- translucent system bars -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <!-- Common list view styles -->
    <style name="MyListView" parent="@android:style/Theme" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:cacheColorHint">#00ffffff</item>
        <item name="android:dividerHeight">2px</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:fadeScrollbars">true</item>
    </style>



    <!-- 对文字超长部分的显示要求 -->
    <style name="ellipsize_end">
        <item name="android:singleLine">true</item>
        <item name="android:max">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="activityLaunchTheme" parent="@android:style/Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="activityLaunchFont" parent="@android:style/Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- 应用,主题预览图 -->
    <style name="store_detail_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/theme_viewpager_item_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:visibility">visible</item>
        <item name="android:background">@color/common_white</item>
    </style>

    <style name="translucent" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item> <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>  <!-- 设置window背景透明，也就是去边框 -->
    </style>

    <style name="wrap_18">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/t_18</item>
        <item name="android:textColor">@color/common_black</item>
    </style>
    <style name="wrap_20">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/t_20</item>
        <item name="android:textColor">@color/common_black</item>
    </style>

    <style name="ResolverActivityTheme" parent="@android:style/Theme.Wallpaper">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="HideDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="MenuDrawer" />
    <style name="Widget" />

    <!-- Base theme for the menu drawer. -->
    <style name="Widget.MenuDrawer">
        <item name="mdMenuBackground">@color/md_defaultBackground</item>
        <item name="mdContentBackground">?android:attr/windowBackground</item>
        <item name="mdDrawerOpenUpContentDescription">@string/nq_md_drawerOpenIndicatorDesc</item>
        <item name="mdDrawerClosedUpContentDescription">@string/nq_md_drawerClosedIndicatorDesc</item>
    </style>

    <style name="MenuDrawer.Widget" />

    <style name="MenuDrawer.Widget.Category">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
        <item name="android:textSize">14sp</item>
        <!-- <item name="android:textAllCaps">true</item> -->

        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/md_category_background</item>

        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuDrawer.Widget.Title">
        <!-- <item name="android:background">@drawable/nq_md_list_selector_holo_dark</item> -->
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="information_item_style">
        <item name="android:paddingTop">@dimen/padding_vertical</item>
        <item name="android:paddingBottom">@dimen/padding_vertical</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:background">@color/information_item_bg_color</item>
    </style>

    <style name="divide_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/common_grey</item>
    </style>

    <style name="divide_line_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="divide_line_v">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/login_head_line_color</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/popwin_show</item>
        <item name="android:windowExitAnimation">@anim/popwin_hide</item>
    </style>

    <style name="information_sex_popwindow_style">
        <item name="android:onClick">onClick</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:padding">@dimen/margin_bigger</item>
        <item name="android:textColor">@color/common_title_grey</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="retrieve_dialog" parent="@android:style/Theme.Dialog">

        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否浮现在activity之上,false就会在屏幕左上角 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 背景模糊，默认为true -->
        <!-- <item name="android:backgroundDimEnabled">false</item> -->
    </style>

    <!--片花剧照页-->
    <style name="clip_item_rl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="clip_item_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@color/common_grey</item>
    </style>

    <style name="clip_item_play">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:alpha">0.9</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:src">@drawable/btn_play</item>
        <item name="android:visibility">gone</item>
    </style>

    <!--高仿微信表情-->
    <style name="face_editview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">6</item>
        <item name="android:padding">@dimen/margin_nomal</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:textColorHint">@color/edit_hint_text</item>
        <item name="android:textSize">@dimen/text_nomal</item>
    </style>

    <style name="MyGifDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="tag_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/abc_text_size_smaller_comment</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:background">@drawable/tag_btn_bg</item>
        <item name="android:textColor">@color/common_text_main</item>
    </style>

    <style name="tag_btn_grey" parent="tag_btn">
        <item name="android:background">@drawable/tag_btn_grey_bg</item>
        <item name="android:textColor">@color/common_text_grey</item>
    </style>

    <style name="tag_btn_solid" parent="tag_btn">
        <item name="android:background">@drawable/tag_btn_solid_bg</item>
        <item name="android:textColor">@color/common_white</item>
    </style>

    <style name="tag_btn_solid_grey" parent="tag_btn">
        <item name="android:background">@drawable/tag_btn_solid_grey_bg</item>
        <item name="android:textColor">@color/common_white</item>
    </style>

    <style name="common_text_tab">
        <item name="android:textColor">@color/common_title_grey</item>
        <item name="android:textSize">@dimen/common_tab_title_size</item>
    </style>

    <style name="common_text_title">
        <item name="android:textColor">@color/common_title_grey</item>
        <item name="android:textSize">@dimen/common_title_size</item>
    </style>

    <style name="common_text_title_light">
        <item name="android:textColor">@color/common_text_grey</item>
        <item name="android:textSize">@dimen/common_title_size</item>
    </style>

    <style name="common_text_poster">
        <item name="android:textColor">@color/common_title_grey</item>
        <item name="android:textSize">@dimen/common_title_size</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="common_text_content">
        <item name="android:textColor">@color/common_title_grey</item>
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
    </style>

    <style name="common_text_content_light">
        <item name="android:textColor">@color/common_text_grey</item>
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
    </style>

    <style name="common_text_small">
        <item name="android:textColor">@color/common_text_grey</item>
        <item name="android:textSize">@dimen/abc_text_size_smaller_comment</item>
    </style>

    <style name="common_text_small_main">
        <item name="android:textColor">@color/common_text_main</item>
        <item name="android:textSize">@dimen/abc_text_size_smaller_comment</item>
    </style>

    <style name="common_img_frontbar">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:background">@drawable/register_line</item>
    </style>

    <style name="common_list">
        <item name="android:divider">@color/common_grey</item>
        <item name="android:dividerHeight">15dp</item>
        <item name="android:background">@color/common_grey</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:cacheColorHint">@color/transparent</item>
    </style>

    <style name="about_tv">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="changepwd_tv">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="common_button">
        <item name="android:width">100dp</item>
        <item name="android:height">40dp</item>
        <item name="android:background">@drawable/tag_btn_solid_bg</item>
        <item name="android:textSize">@dimen/common_title_size</item>
        <item name="android:textColor">@color/common_white</item>
    </style>

    <style name="common_button_light">
        <item name="android:width">100dp</item>
        <item name="android:height">40dp</item>
        <item name="android:background">@drawable/tag_btn_solid_grey_bg</item>
        <item name="android:textSize">@dimen/common_title_size</item>
        <item name="android:textColor">@color/common_white</item>
    </style>

    <style name="common_list_item">
        <item name="android:height">@dimen/title_height</item>
        <item name="android:layout_marginLeft">@dimen/header_padding_left</item>
        <item name="android:layout_marginRight">@dimen/header_padding_right</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:onClick">onClick</item>
        <item name="android:background">@color/common_white</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton" />

    <style name="edit_AlertDialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 是否启用标题栏 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 是否使用背景半透明 -->
    </style>

    <!--帖子类型：精品，有图，有表情的style-->
    <style name="post_type_tv">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:scaleType">fitEnd</item>
    </style>
</resources>
